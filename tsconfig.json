{
  "compilerOptions": {
    "incremental": true,
    "declaration": false,
    "lib": [
      "ES2019",
    ],
    "target": "es2020",
    "module": "commonjs",
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/src",
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/presentation/handlers/chosen-result-gist.ts"
  ]
}